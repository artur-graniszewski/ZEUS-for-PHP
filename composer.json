{
  "name": "zeus-server/zf3-server",
  "description": "Zeus Server for Zend Framework 3",
  "type": "library",
  "license": "LGPL-3.0",
  "authors": [
    {
      "name": "Artur Graniszewski",
      "email": "artur.graniszewski@gmail.com"
    }
  ],
  "keywords": [
    "zf3",
    "zend",
    "multitasking",
    "httpd",
    "zend framework",
    "posix",
    "memcached",
    "server",
    "ipc",
    "scheduler",
    "plugins",
    "async",
    "hhvm"
  ],
  "require": {
    "php": "^5.6 || ^7.0",
    "ext-posix": "*",
    "ext-pcntl": "*",
    "zendframework/zend-mvc": "^3.0.1",
    "zendframework/zend-console": "^2.6",
    "zendframework/zend-config": "^2.6",
    "zendframework/zend-mvc-console": "^1.1",
    "react/react": "^0.4.2",
    "zendframework/zend-log": "^2.9"
  },
  "suggest": {
    "zendframework/zend-cache": "^2.7, to use Memcached Server Service",
    "opis/closure": "^2.4.0, to use Async Server Service"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.8 || ^5.7",
    "squizlabs/php_codesniffer": "^2.7",
    "zendframework/zend-cache": "^2.7",
    "opis/closure": "^2.4.0",
    "athletic/athletic": "^0.1"
  },
  "autoload": {
    "psr-4": {
      "Zeus\\": "src/Zeus/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ZeusTest\\": "test/",
      "ZeusBench\\": "benchmarks/"
    }
  },
  "scripts": {
    "check": [
      "@cs-check",
      "@test"
    ],
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "test": "phpunit"
  }
}